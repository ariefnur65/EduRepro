<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundkuisaku"
    app:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="id.co.blogspot.blogmozink.edurepro.BmiActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    android:id="@+id/bmiConvert"
    >

    <TextView
        android:id="@+id/infoBerat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif"
        android:text="@string/info_Berat"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.298"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerJudul" />

    <TextView
        android:id="@+id/infoTinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:text="@string/info_Tinggi"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.338"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputBerat"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/inputTinggi"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="183dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bmicm"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:paddingRight="30dp"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorFont"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/inputBerat"
        app:layout_constraintRight_toRightOf="@+id/inputBerat"
        app:layout_constraintTop_toBottomOf="@+id/infoTinggi"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/inputBerat"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/bmikg"
        android:ems="10"
        android:inputType="number"
        android:maxLines="1"
        android:paddingRight="30dp"
        android:textAlignment="center"
        android:focusedByDefault="true"
        android:textColor="@color/colorFont"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintLeft_toLeftOf="@+id/infoBerat"
        app:layout_constraintRight_toRightOf="@+id/infoBerat"
        app:layout_constraintTop_toBottomOf="@+id/headerJudul" />

    <Button
        android:id="@+id/btn_hitung"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/convertkuisaku"
        android:onClick="menghitungBMI"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputTinggi" />

    <TextView
        android:id="@+id/infoSaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/infoSaran"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputKet"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/infoIMT"
        android:layout_width="262dp"
        android:layout_height="39dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/infoIMT"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_hitung"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/outputKet"
        android:layout_width="304dp"
        android:layout_height="51dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/kotakbmikuisaku"
        android:editable="false"
        android:ems="10"
        android:textAlignment="center"
        android:textColor="@color/colorFont"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoIMT"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/outputSaran"
        android:layout_width="304dp"
        android:layout_height="100dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/kotaksarankuisaku"
        android:hint="@string/output_saran"
        android:maxWidth="300dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/colorFont"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoSaran" />

    <ImageView
        android:id="@+id/headerJudul"
        android:layout_width="162dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bmiconverterjudul"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/kembali1kuisaku"
        android:onClick="openMain"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/headerJudul"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
