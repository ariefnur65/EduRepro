<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundkuisaku"
    tools:context="id.co.blogspot.blogmozink.edurepro.MainActivity">

    <Button
        android:id="@+id/btn_mitosfakta"
        android:layout_width="131dp"
        android:layout_height="101dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tombolmitosfakta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/btn_kuis"
        app:layout_constraintTop_toBottomOf="@+id/btn_kuis"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_bmicon"
        android:layout_width="131dp"
        android:layout_height="101dp"

        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tombolbmiconverter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_mitosfakta"
        app:layout_constraintRight_toRightOf="@+id/btn_materi"
        app:layout_constraintTop_toBottomOf="@+id/btn_materi"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/colorPrimary" />

    <ImageView
        android:id="@+id/logoAku"
        android:layout_width="235dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/logokuisaku"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="58dp" />

    <Button
        android:id="@+id/btn_kuis"
        android:layout_width="131dp"
        android:layout_height="101dp"

        android:layout_marginTop="0dp"
        android:background="@drawable/tombolkuisaku"
        app:layout_constraintTop_toBottomOf="@+id/logoAku"
        app:srcCompat="@color/colorPrimary"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/btntutorial"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="@+id/logoAku"
        app:layout_constraintHorizontal_bias="0.01" />

    <Button
        android:id="@+id/btn_materi"
        android:layout_width="131dp"
        android:layout_height="101dp"

        android:background="@drawable/tombolmateri"
        app:srcCompat="@color/colorPrimary"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_kuis"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/btn_kuis"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pengaturan1kuisaku"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tentang1kuisaku"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/btn_setting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntutorial"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bantuan1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_about"
        app:layout_constraintTop_toBottomOf="@+id/btn_setting" />
    <Button
        android:id="@+id/btn_video"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/video"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_akun"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btn_akun" />
    <Button
        android:id="@+id/btn_akun"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/namamenukuisaku"
        android:maxLength="11"
        android:paddingLeft="5dp"
        android:paddingRight="35dp"
        android:text="aaaaaaaaaaaaaa"
        android:textAlignment="center"
        android:textColor="@color/colorFont"
        app:layout_constraintLeft_toRightOf="@+id/btn_about"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
