<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.blogspot.blogmozink.edurepro.MateriActivity"
    android:background="@drawable/backgroundkuisaku"
    >
    <Button
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/kembali1kuisaku"
        android:onClick="openMain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/headerJudulMateri"
        app:layout_constraintTop_toTopOf="@+id/headerJudulMateri" />


    <Button
        android:id="@+id/button"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/referensi"
        android:onClick="openRef"
        app:layout_constraintHorizontal_bias="0.813"
        app:layout_constraintLeft_toRightOf="@+id/headerJudulMateri"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/headerJudulMateri"
        android:layout_width="162dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/materijudulkuisaku"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ScrollView
